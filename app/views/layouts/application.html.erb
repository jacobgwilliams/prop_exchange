<!DOCTYPE html>
<html>
  <head>
    <title>PropExchange</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      Hello, <%= current_user.name %>! | <%= link_to 'Log out', '/logout' %>
    <% else %>
      <%= link_to 'Log in' %> | <%= link_to 'Sign up', '/signup' %>
    <% end %>

    <%= yield %>
  </body>
</html>
